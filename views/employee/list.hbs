<body class="bg-dark">
<h3 class="d-flex justify-content-center">Employee List</h3>
<div class="row">
    <div class="col">
       <a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a> 
    </div>
    <div class="col d-flex justify-content-end">
       <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </nav> 
    </div>
</div>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Equipment</th>
            <th>Name</th>
            <th>ID</th>
            <th>Status</th>
            <th>Description</th>
            <th>Employee</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-secondary">
        {{#each list}}
        <tr>
            <td>{{this.typeEquipment}}</td>
            <td>{{this.nameDevice}}</td>
            <td>{{this.deviceID}}</td>
            <td>{{this.status}}</td>
            <td>{{this.description}}</td>
            <td>{{this.employeeAssign}}</td>
            <td>
                <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</body>
